{
  "plugins": ["prettier"],
  "extends": [
    "next/core-web-vitals",
    "next/typescript",
    "plugin:prettier/recommended",
    "plugin:tailwindcss/recommended"
  ],
  "rules": {
    "prettier/prettier": ["error", { "endOfLine": "auto" }],
    "no-console": [
      "warn",
      {
        "allow": ["info", "warn", "error"]
      }
    ]
  }
}
